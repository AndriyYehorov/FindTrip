@model ReportViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container-sm text-center">

    <h1 class="text-start">Відгук</h1>

    <hr />

    <form asp-action="Report" asp-controller="Trip">

        <input name="tripId" type="text" value=@Model.TripId hidden>
        <div class="row">
            <div class="col">
                <div class="form-floating">
                    <textarea class="form-control" asp-for="Text" rows="20" cols="20" style="height:180px"></textarea>
                    <label asp-for="Text" class="form-label">Текст відгуку</label>
                </div>
                <span class="text-danger" asp-validation-for="Text"></span>
            </div>
        </div>       

        <div class="row">
            <div class="col text-start">
                <label class="form-label">Оцінка: </label>              
            </div>
        </div>

        <div class="row">
            <div class="col text-start">       
                <div class="stars">

                    <input class="star star-5" id="star-5" type="radio" value="5" asp-for="Rating" />

                    <label class="star star-5" for="star-5"></label>

                    <input class="star star-4" id="star-4" type="radio" value="4" asp-for="Rating" />

                    <label class="star star-4" for="star-4"></label>

                    <input class="star star-3" id="star-3" type="radio" value="3" asp-for="Rating" />

                    <label class="star star-3" for="star-3"></label>

                    <input class="star star-2" id="star-2" type="radio" value="2" asp-for="Rating" />

                    <label class="star star-2" for="star-2"></label>

                    <input class="star star-1" id="star-1" type="radio" value="1" asp-for="Rating" />

                    <label class="star star-1" for="star-1"></label>

                </div>
                <span class="text-danger" asp-validation-for="Rating"></span>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="form-floating mb-3">
                    <button type="submit" class="btn btn-primary w-100">Опублікувати</button>
                </div>
            </div>
        </div>
        <div class="text-danger mb-2">@ViewBag.Error</div>
    </form>
</div>

