@using WebApplication1.Models;
@model RegisterViewModel

@{
    var retUrl = ViewContext.ViewData["retUrl"]?.ToString();
    retUrl ??= "empty";
}

<form asp-action="Register" asp-controller="User">
    <input name="retUrl" value="@retUrl" hidden />

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-envelope"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Email"
                       type="email"
                       class="form-control"
                       placeholder="" 
                       autocomplete="off" />
                <label asp-for="Email" class="form-label">Електронна пошта</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Login"
                       type="text"
                       class="form-control"
                       placeholder=""
                       autocomplete="off" />
                <label asp-for="Login" class="form-label">Лoгін</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Login"></span> 
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-lock"></i>
            </span>
            <div class="form-floating">
                <input asp-for="Password"
                    type="password"
                    class="form-control"
                    placeholder="Введіть пароль" 
                    value="@Model?.Password"
                    autocomplete="off" />
                <label asp-for="Password" class="form-label" >Пapoль</label> 
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-lock"></i>
            </span>
            <div class="form-floating">        
                <input
                    asp-for="RepeatPassword"
                    type="password"
                    class="form-control"
                    placeholder=""
                    value="@Model?.RepeatPassword"
                    autocomplete="off" />
                <label asp-for="RepeatPassword" class="form-label">Повторіть пароль</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="RepeatPassword"></span> 
    </div>

    <div class="text-danger mb-2">@ViewBag.RegisterError</div>
    <button type="submit" class="btn btn-primary w-100">Створити аккaунт</button> 
</form>