@using WebApplication1.Models; 
@model LoginViewModel

@{
    var retUrl = ViewContext.ViewData["retUrl"]?.ToString();
    retUrl ??= "empty";
}

<form asp-action="Login" asp-controller="User">
    <input name="retUrl" value="@retUrl" hidden />
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
                <input 
                    asp-for="Login" 
                    type="text" 
                    class="form-control" 
                    placeholder="Введіть логін" 
                    autocomplete="off" />
                <label asp-for="Login" class="form-label">Лoгін</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Login"></span>
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <i class="fa-solid fa-lock"></i>
            </span>
            <div class="form-floating">
                <input
                    asp-for="Password"
                    type="password"
                    class="form-control"
                    placeholder="Введите пароль" 
                    value="@Model?.Password"
                    autocomplete="off" />
                <label asp-for="Password" class="form-label">Пapoль</label>
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span> 
    </div>

    <div class="text-danger mb-2">@ViewBag.Error</div>
    <button type="submit" class="btn btn-primary w-100">Увійти</button>
</form>